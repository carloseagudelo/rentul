<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Tittle</th>
      <th>Description</th>
      <th>Image</th>
      <th>User</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.tittle %></td>
        <td><%= post.description %></td>
        <td><%= post.image %></td>
        <td><%= User.find(post.user_id).name %></td>
        <td><%= post.created_at %></td>
        <td>
          <%= link_to 'Ver más', post %>
        </td>
        <td>
          <% if post.user_id == @current_user.id %>
            <%= link_to 'Editar', edit_post_path(post) %>
          <% end %>
        </td>
        <td>
         <% if post.user_id == @current_user.id %>
            <%= link_to 'Eliminar', post, method: :delete, data: { confirm: '¿Estas seguro de eliminar el post?' } %>
         <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
